participant Bank identified by bankId {
  o String bankId
  o String bankName
}

participant User identified by adharId {
  o String adharId
  o String name
  o String thumb
  o String email
  o String address
  o String phone
}

//******* ASSEST *****//
/*asset SampleAsset identified by assetId {
  o String assetId
  --> SampleParticipant owner
  o String value
}*/

concept Field {
  o String fname
  o String[] permitted_ID     /* bankID of permitted banks for using the field are inserted in this array*/
  o String key
}


concept FieldTable {
  o Field adharID
  o Field name
  o Field thumb
  o Field email
  o Field address
  o Field phone
}
asset TAccess identified by TAId{
  o String TAId
  --> User owner
  o FieldTable fieldTable  /*permission in the table*/
  o DateTime timeStamp
}

asset TData identified by TDId {
  o String TDId
  --> Bank dataUser
  o String[] reqFields  /* names of the fields that the bak requests*/
  o DateTime timeStamp
}


//******** TRANSACTIONS *******//
/*transaction SampleTransaction {
  --> SampleAsset asset
  o String newValue
