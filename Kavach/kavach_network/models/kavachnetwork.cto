//**** Two transactions --> represents the relation with the components *******//
transaction PutAcBlock{
  --> TAccess taccess
  --> User owner
}

transaction PutDtBlock{
  --> TData tdata
  --> Bank dataUser
  --> TAccess taccess
  o String acBlockID
}


